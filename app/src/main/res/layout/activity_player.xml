<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <ImageView style="@style/Logo" />

    <TextView
        android:id="@+id/song_name_tv"
        style="@style/AlbumNameTV" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/loop_ib"
            style="@style/PlayerIB"
            android:src="@drawable/ic_all_inclusive_48dp" />

        <ImageButton
            android:id="@+id/prev_ib"
            style="@style/PlayerIB"
            android:src="@drawable/ic_skip_previous_48dp" />

        <ImageButton
            android:id="@+id/pause_ib"
            style="@style/PlayerIB"
            android:src="@drawable/ic_pause_circle_filled_48dp" />

        <ImageButton
            android:id="@+id/next_ib"
            style="@style/PlayerIB"
            android:src="@drawable/ic_skip_next_48dp" />

        <ImageButton
            android:id="@+id/like_ib"
            style="@style/PlayerIB"
            android:src="@drawable/ic_favorite_border_48dp" />
    </LinearLayout>
</LinearLayout>